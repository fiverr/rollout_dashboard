{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "lib": ["es6", "dom", "es2017"],
        "jsx": "react",
        "skipLibCheck": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowJs": true,
        "noUnusedLocals": true
    },
    "include": [
        "./src/"
    ],
    "typeAcquisition": {
       "enable": true
    },
    "exclude": [
        "./node_modules",
        "./bower_components"
    ]
}